# FinStory API Configuration
# Copy this file to .env and fill in your values

# AI Provider Configuration
AI_PROVIDER=openai  # "openai" or "gemini"

# OpenAI Configuration (if using OpenAI)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini  # gpt-4o-mini, gpt-4o, gpt-3.5-turbo

# Gemini Configuration (if using Gemini)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# Application Settings
DEBUG=False

# Optional: Database Configuration (if using PostgreSQL/Redis)
# DATABASE_URL=postgresql://user:pass@localhost:5432/finstory
# REDIS_URL=redis://localhost:6379/0
